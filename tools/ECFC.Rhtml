        .chart-container {
            position: relative;
            width: 100%;
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
            height: 300px;
        }

        .ecfc-container {
            position: relative;
            width: 100%;
            height: 300px;
            max-width: 1024px;
            margin-left: auto;
            margin-right: auto;
            padding: 1rem 1rem;
            overflow-x: auto;
