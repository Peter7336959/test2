        </footer>
      </div>
    </section>

  </main>

  <script>
    // Initialize Lucide Icons
    lucide.createIcons();

    /* ================= Navigation Logic ================= */
    const sections = [
      "封面", "黃金三角", "法規遵循", "規劃六步驟", "呼吸防護 EPR", "國際標竿", 
      "心理與溝通", "實務痛點", "科技賦能", "AI 文獻回顧", "案例分析", "結語"
    ];

    const navItemsContainer = document.getElementById('nav-items-container');
    const sidebar = document.getElementById('sidebar');

    function renderNav() {
      navItemsContainer.innerHTML = sections.map((title, index) => `
        <button
          onclick="scrollToSection(${index})"
          class="flex items-center p-4 hover:bg-slate-800 transition-colors w-full text-left nav-item"
          id="nav-btn-${index}"
        >
          <div class="w-8 text-center font-bold text-lg">${index + 1}</div>
          <span class="ml-4 whitespace-nowrap opacity-100 md:opacity-0 md:group-hover:opacity-100 transition-opacity duration-200">
            ${title}
          </span>
        </button>
      `).join('');
    }

    function toggleMenu() {
      sidebar.classList.toggle('translate-x-full');
    }

    function scrollToSection(index) {
      const element = document.getElementById(`section-${index}`);
      if (element) {
        element.scrollIntoView({ behavior: 'smooth' });
      }
      if (window.innerWidth < 768) { // Mobile close menu
        sidebar.classList.add('translate-x-full');
      }
    }

    // Scroll Spy
    function updateActiveSection() {
      const scrollPosition = window.scrollY + 200;
      const allSections = document.querySelectorAll('section');
      
      allSections.forEach((section, index) => {
        const top = section.offsetTop;
        const height = section.offsetHeight;
        
        if (scrollPosition >= top && scrollPosition < top + height) {
          document.querySelectorAll('.nav-item').forEach(btn => {
            btn.classList.remove('bg-yellow-500', 'text-slate-900');
          });
          const activeBtn = document.getElementById(`nav-btn-${index}`);
          if (activeBtn) {
            activeBtn.classList.add('bg-yellow-500', 'text-slate-900');
          }
        }
      });
    }

    window.addEventListener('scroll', updateActiveSection);
    renderNav();
    updateActiveSection();

  </script>
</body>
